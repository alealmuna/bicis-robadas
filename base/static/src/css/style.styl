*
  margin 0
  padding 0
  font-family Arial
  box-sizing border-box
  -moz-box-sizing border-box
  -webkit-font-smoothing antialiased

body
  overflow hidden

h1, h2, h3, h4
  display inline-block
  font-weight normal

header
  background #fefefe
  border-bottom 1px solid rgba(0,0,0,.4)
  height 50px
  line-height 50px
  padding 0 20px

  h1
    a
      color #000
      text-decoration none

  nav
    float right

    a
      display inline-block
      padding 0 12px 0
      line-height 50px
      text-decoration none
      text-transform lowercase

      &:last-child
        padding-right 0

      &:hover
        color rgba(0,0,0,.4)

a.crossbutton
  cursor pointer
  font-size 18px
  line-height 25px
  text-decoration none
  border-radius 100px
  border 1px solid
  width 25px
  height 25px
  display block
  text-align center
  transition: all 0.25s;
  -webkit-transition: all 0.35s;

  &:hover
    background #c00
    color #fff

.loading
  color rgba(0,0,0,.4)
  text-align center

.modal
  background #f00
  display none
  opacity 0

  &.active
    display block
    opacity 1
